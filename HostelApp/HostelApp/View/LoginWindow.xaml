<Window x:Class="HostelApp.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HostelApp"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400" Background="Black">

    <StackPanel >
        <Label Content="Общежитие" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
        <Separator></Separator>
        <Label Content="Имя пользователя :" Foreground="White" Margin="5" ></Label>
        <TextBox Name="txtUsername" Background="DarkGray" Foreground="Black" FontSize="15" Margin="5"></TextBox>
        <Label Content="Пароль :" Foreground="White" Margin="5" ></Label>
        <PasswordBox Name="txtPassword" Background="DarkGray" Foreground="Black" FontSize="15" Margin="5"></PasswordBox>
        <Button Content="Войти" Click="BtnSubmit_Click" Margin="15" Background="DarkGray" Foreground="Black" FontSize="15" Width="160"/>
        <Label Name="lblError" Visibility="Hidden" Content="Текст сообщения об ошибке" Foreground="#FFE56D6D"/>
    </StackPanel>
</Window>
