<Page x:Class="HostelApp.View.SummaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HostelApp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Summary" Loaded="Page_Loaded">

    <StackPanel Margin="15">
        <StackPanel Orientation="Horizontal">
            <Label Content="Количество мест: " FontSize="22" Foreground="#FF05C4FC"></Label>
            <Label Name="lblTotal" Content="0" FontSize="22" Foreground="White"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Сводобно: " FontSize="22" Foreground="#FF05C4FC"></Label>
            <Label Name="lblFree" Content="0" FontSize="22" Foreground="White"></Label>
        </StackPanel>
        <StackPanel Name="pnlAdmin" Visibility="Hidden" Orientation="Horizontal">
            <Label Content="Не оплачено: " FontSize="22" Foreground="#FF05C4FC"></Label>
            <Label Name="lblDept" Content="0" FontSize="22" Foreground="#FFFCBBBB"></Label>
        </StackPanel>
    </StackPanel>
</Page>
